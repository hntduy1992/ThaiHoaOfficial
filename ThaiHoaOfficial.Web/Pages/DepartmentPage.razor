@page "/phong-ban"
@inherits DepartmentPageBase

<MudTable Items="@Departments" Hover="true" Filter="new Func<Department,bool>(FilterFunc1)" @bind-SelectedItem="SelectedItem" Loading="@(Departments==null)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Danh sách phòng/ban</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="SearchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Tên</MudTh>
        <MudTh>Thông báo</MudTh>
        <MudTh>Ngày tạo</MudTh>
        <MudTh>Trạng thái</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Notification">@context.Notification</MudTd>
        <MudTd DataLabel="CreatedDate">@context.CreatedDate</MudTd>
        <MudTd DataLabel="Status">@context.Status</MudTd>
        <MudTd DataLabel=""></MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
